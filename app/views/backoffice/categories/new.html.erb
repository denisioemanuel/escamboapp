<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cadastrando Categorias</h1>
                <div class="panel panel-default">
                        <div class="panel-heading">
                            Criando uma nova categorias
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
	                        <div class="col-lg-6">
	                        <%= form_for([:backoffice, @category])  do |f| %>
		                        <div class="form-group">
		                        	<%= f.label :description %>
		                        	<%= f.text_field :description, class:"form-control", placeholder:"Ex: Nome Categoria" %>
			                	</div>
		                        <div class="form-group">
		                        	<%= f.submit "Salvar", class:"btn btn-default" %>
			                	</div>
			                <% end %>
			                </div>
	                     </div>
	                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
