<h1 class="page-header">Usuário</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando os usuários
    <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style:"    margin-top: -5px;" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Perfil de acesso</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.role_i18n %></td>
              <td>
                <%= link_to edit_backoffice_admin_path(admin.id), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <% if current_admin.id != admin.id %>
                  <%= link_to backoffice_admin_path(admin), class: "btn btn-danger btn-circle", method: :delete,
                    data: {confirm: "Você tem certeza?",
                    text: t('messages.confirm_with',item: admin.name),
                    'confirm-button-text': 'SIM',
                    'cancel-button-text': 'NÃO',
                    'confirm-button-color': '#66CD00',
                    'sweet-alert-type': 'warning',
                    confirmButtonText: 'Yes, delete it!'} do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                <% else %>
                  <%= link_to '#', class: "btn btn-danger btn-circle", disabled: "disabled" do %>
                  <i class="fa fa-trash"></i>
                <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
